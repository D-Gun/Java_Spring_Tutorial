		<constructor-arg>
			<list>
				<bean class="spring.di.entity.NewlecExam" p:kor="1" p:eng="1" />
				<ref bean="exam"/>
			</list>
		</constructor-arg>
	</bean> -->
	<!-- util namespace 사용해서 위와 똑같이 만들기, 아래 구문은 실대로 객체를 생성함 -->
	<util:list id="exams" list-class="java.util.ArrayList">
		<bean  class="spring.di.entity.NewlecExam" p:kor="1" p:eng="1" />
		<ref bean="exam"/>
	</util:list>
</beans>
